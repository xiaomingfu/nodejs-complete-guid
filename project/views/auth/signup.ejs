<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
         <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="auth-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= validationErrors.find(e => e.param === "email") ? "invalid" : "" %>"
                type="email" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e => e.param === "password") ? "invalid" : "" %>"
                 type="password" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmedPassword">Confirm Password</label>
                <input class="<%= validationErrors.find(e => e.param === "confirmedPassword") ? "invalid" : "" %>"
                type="password" name="confirmedPassword" id="confirmedPassword" value="<%= oldInput.confirmedPassword %>">
            </div>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>